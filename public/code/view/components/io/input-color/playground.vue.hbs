{{#if hasSlots}}
<mk-input-color{{{props}}}>
  {{#if slots.icon}}
  <template #icon>
    <mk-icon icon="invert_colors" />
  </template>
  {{/if}}
  {{#if slots.cancel}}
  <template #icon>
    <mk-icon icon="delete_forever" />
  </template>
  {{/if}}
</mk-input-color>
{{else}}
<mk-input-color{{{props}}}/>
{{/if}}